<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="a100pyta.Views.MainPage"
             BackgroundImage="main_bg.png">

    <AbsoluteLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.2, 200, 200" 
                AbsoluteLayout.LayoutFlags="PositionProportional">
            <Image Source="main_img.png" />
            <Image Source="main_lbl.png"/>
        </StackLayout>
        <Button 
            Text="Nowy zestaw"
            Clicked="NewGameBtn_Clicked"
            BackgroundColor="White"
            BorderRadius="50"
            AbsoluteLayout.LayoutBounds="0.5, 0.8, 150, 50"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button 
            x:Name="conti"
            Text="Kontynuuj"
            Clicked="ContinueGameBtn_Clicked"
            BackgroundColor="White"
            BorderRadius="50"
            IsVisible="{Binding Flag}"
            AbsoluteLayout.LayoutBounds="0.5, 0.9, 150, 50"
            AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>

</ContentPage>